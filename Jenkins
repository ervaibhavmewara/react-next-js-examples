
pipeline {
    agent any
    stages{
        stage("build") {
            steps {
                 sh " yarn install"
                 sh " yarn build" 
            }
        }    
        stage("deploy") {
            steps {
                   sh "pm2 restart app || pm2 start --yarn name app --start -p 4040"
                  

            } 
       }    
    }

}
